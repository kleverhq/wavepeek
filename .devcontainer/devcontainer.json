{
    "name": "wavepeek-workspace",
    "build": {
        "dockerfile": "Dockerfile",
        "target": "dev",
        "args": {
            "RTL_ARTIFACTS_VERSION": "v1.0.0"
        }
    },
    "containerEnv": {
        "WAVEPEEK_IN_CONTAINER": "1"
    },
    "runArgs": ["--network=host"],
    "initializeCommand": "sh -lc 'mkdir -p \"$HOME/.config/opencode\" \"$HOME/.local/share/opencode\" \"$HOME/.cache/opencode\"'",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind",
    "mounts": [
        "source=${localEnv:HOME}/.config/opencode,target=/home/ubuntu/.config/opencode,type=bind",
        "source=${localEnv:HOME}/.local/share/opencode,target=/home/ubuntu/.local/share/opencode,type=bind",
        "source=${localEnv:HOME}/.cache/opencode,target=/home/ubuntu/.cache/opencode,type=bind"
    ],
    "remoteUser": "ubuntu",
    "updateRemoteUserUID": true,
    "postCreateCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    "postStartCommand": "make bootstrap",
    "customizations": {
        "vscode": {
            "settings": {
                "files.trimTrailingWhitespace": true,
                "extensions.verifySignature": false,
                "terminal.integrated.commandsToSkipShell": [
                    "-workbench.action.quickOpen"
                ]
            },
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one",
                "redhat.vscode-yaml",
                "gruntfuggly.todo-tree",
                "sst-dev.opencode",
                "github.vscode-github-actions",
                "github.vscode-pull-request-github",
                "d-koppenhagen.vscode-code-review"
            ]
        }
    }
}
